#-----------------------------------------------------------------------------
CSV = b2m3
#-----------------------------------------------------------------------------
CSV2FS = ./csv2fs
#-----------------------------------------------------------------------------
%.fs:  %.csv
	${CSV2FS} $< $@
#-----------------------------------------------------------------------------
.PHONY: help
help:
	@echo 'Targets:'
	@echo "  all       - Convert ${CSV}.csv to output file ${CSV}.fs."
	@echo '  clean     - Remove ${CSV}.fs.'
	@echo '  tags      - Create tags file for python sources for ${CSV2FS}.'
#-----------------------------------------------------------------------------
.PHONY: all
all: ${CSV}.fs
#-----------------------------------------------------------------------------
.PHONY: clean
clean:
	rm -f ${CSV}.fs
#-----------------------------------------------------------------------------
.PHONY: tags ctags
tags ctags:
	ctags --language-force=python ${CSV2FS}
#-----------------------------------------------------------------------------
