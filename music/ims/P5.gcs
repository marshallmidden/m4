* vim: tabstop=8 expandtab shiftwidth=4 softtabstop=4
process mixed,NOTE
        vars    PITCH,LENGTH,notenum
        encode  PITCH=NOTE;after,(;upto,,
        if      "PITCH" != 0
                encode  LENGTH=NOTE;after,,
                decode  PITCH;notenumber,notenum
                (notenum,LENGTH
        else
                NOTE
        endif
endprocess

measure 8
staff   grpr: 1
grpr:   begin mixed (4c,.5) (4c,2)
cstop*
