* vim: tabstop=8 expandtab shiftwidth=4 softtabstop=4
* ----------------------------------------------------------------------------
macro   flute,VOICE
  instrument VOICE Flute            $$ 74   Flauti.
  intensity  VOICE 120
  pan        VOICE 51
  reverb     VOICE 52
endm
* ----------------------------------------------------------------------------
macro   oboe,VOICE
  instrument VOICE Oboe             $$ 69   Oboi.
  intensity  VOICE 100
  pan        VOICE 64
  reverb     VOICE 55
endm
* ----------------------------------------------------------------------------
macro   clarinet,VOICE
  instrument VOICE Clarinet         $$ 72
  intensity  VOICE 95
  pan        VOICE 57
  reverb     VOICE 57
endm
* ----------------------------------------------------------------------------
macro   clarinet_in_A,VOICE
  clarinet  VOICE
  if    m2
*   xpose  VOICE     +3             $$ for --vertical Clarinet in A ... "C" plays "A" (i.e. C, B, B-, A = -3)
    xpose  VOICE     -3             $$ Clarinet in A ... "C" plays "A" (i.e. C, B, B-, A = -3)
  endif
endm
* ----------------------------------------------------------------------------
macro   bassoon,VOICE
  instrument VOICE Bassoon          $$ 71   Fagotti.
  intensity  VOICE 100
  pan        VOICE 89
  reverb     VOICE 57
endm
* ----------------------------------------------------------------------------
macro french_horn,VOICE
  instrument VOICE French Horn      $$ 61
  intensity  VOICE 95
  pan        VOICE 95
  reverb     VOICE 62
endm
* ----------------------------------------------------------------------------
macro french_horn_in_C,VOICE
  french_horn VOICE
  if    m2
    xpose    VOICE -12              $$ French Horn in C plays 12 semitones lower from what is written
  endif
endm
* ----------------------------------------------------------------------------
macro french_horn_in_D,VOICE
  french_horn VOICE
  if    m2
*   xpose    VOICE +10              $$ for --vertical French Horn in D is 9 semitones lower from what is played
    xpose    VOICE -10              $$ French Horn in D is 9 semitones lower from what is played
  endif
endm
* ----------------------------------------------------------------------------
macro trombone,VOICE
  instrument VOICE Trombone         $$ Trombe
  intensity  VOICE 95
  pan        VOICE 102
  reverb     VOICE 60
endm
* ----------------------------------------------------------------------------
macro trombone_in_C,VOICE
  trombone  VOICE
endm
* ----------------------------------------------------------------------------
macro trombone_in_D,VOICE
  trombone  VOICE
  if    m2
*   xpose    VOICE -2               $$ for --vertical Trombone in D is 2 semitones higher from what is played
    xpose    VOICE +2               $$ Trombone in D is 2 semitones higher from what is played
  endif
endm
* ----------------------------------------------------------------------------
macro timpani,VOICE
  instrument VOICE Timpani          $$ Timpani always plays note on music staff.
  intensity  VOICE 120
  pan        VOICE 108
  reverb     VOICE 60
endm
* ----------------------------------------------------------------------------
macro violin,VOICE
  instrument VOICE Violin           $$ 40
  intensity  VOICE 105
  pan        VOICE 13
  reverb     VOICE 60
endm
* ----------------------------------------------------------------------------
macro viola,VOICE
  instrument VOICE Viola            $$ 41
  intensity  VOICE 115
  pan        VOICE 70
  reverb     VOICE 60
endm
* ----------------------------------------------------------------------------
macro cello,VOICE
  instrument VOICE Cello            $$ 42
  intensity  VOICE 100
  pan        VOICE 120
  reverb     VOICE 60
endm
* ----------------------------------------------------------------------------
macro contrabass,VOICE
  instrument VOICE Contrabass       $$ 43
  intensity  VOICE 100
  pan        VOICE 110
  reverb     VOICE 72
  if      m2
*   xpose    VOICE +12 c            $$ for --vertical Play one octave lower than note given.
    xpose    VOICE -12 c            $$ Play one octave lower than note given.
  endif
endm
* ----------------------------------------------------------------------------
macro pizz,VOICE
  instrument VOICE Pizzicato Strings    $$ 45
  intensity  VOICE 100
  pan        VOICE 64
  reverb     VOICE 60
endm
