#!/bin/bash -ex
#-----------------------------------------------------------------------------
let M=100
#-----------------------------------------------------------------------------
let C=$M
let P=1
#-----------------------------------------------------------------------------
L="--hosts=0 --channels=00 --ids=18"
#-----------------------------------------------------------------------------
while true; do
    # uptime
    #.............................................................................
    ./2694.to.125.create
    #.............................................................................
    ssh -p 22 root@10.0.11.125 rescan-scsi-bus.sh -r -w -m -a --nooptscan $L >/dev/null 2>&1
    ssh -p 22 root@10.0.11.125 lsscsi | tee A.lsscsi >/dev/null 2>&1
    let A=`egrep -c 'LIO-ORG|PARSEC' A.lsscsi || true` || true
    if [ "$A"x != "1x" ]; then
	echo "LIO-ORG or PARSEC not present!"
	exit 1
    fi
    #.............................................................................
    ./2694.to.125.delete
    #.............................................................................
    ssh -p 22 root@10.0.11.125 rescan-scsi-bus.sh -r -w -m -a --nooptscan $L >/dev/null 2>&1
    ssh -p 22 root@10.0.11.125 lsscsi | tee A.lsscsi >/dev/null 2>&1
    let A=`egrep -c 'LIO-ORG|PARSEC' A.lsscsi || true` || true
    if [ "$A"x != "0x" ]; then
	echo "LIO-ORG or PARSEC present!"
	exit 1
    fi
    if [ $C == 1 ]; then
        exit 0
    fi
    #.............................................................................
    let C=$C-1
    echo "Okay $P passes!"
    let P=$P+1
done
sync;sync
echo "Finished $M passes!" >> /dev/stderr
exit 0
