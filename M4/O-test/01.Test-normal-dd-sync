#!/bin/bash -ex
DEV=$1
if [ "$DEV" = '' ]; then
    echo "Need argument of the device to zero (sda)"
    exit 1
fi
#-----------------------------------------------------------------------------
echo "START $0"
#-----------------------------------------------------------------------------
sync && sync
echo 3 >/proc/sys/vm/drop_caches
sysctl -a | grep -i dirty
#-----------------------------------------------------------------------------
free -m
vmstat -S M
#-----------------------------------------------------------------------------
time dd if=/dev/zero of=/dev/${DEV} bs=2M count=2500
#-----------------------------------------------------------------------------
free -m
vmstat -S M
#-----------------------------------------------------------------------------
time sync && time sync
#-----------------------------------------------------------------------------
free -m
vmstat -S M
#-----------------------------------------------------------------------------
echo "DONE with $0"
