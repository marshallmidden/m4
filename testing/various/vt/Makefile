LIBS += -lncurses

PROGS = hello keys printw

#-----------------------------------------------------------------------------
all: ${PROGS}
#-----------------------------------------------------------------------------
hello: hello.c
	${CC} -o $@ $< ${LIBS}
#-----------------------------------------------------------------------------
keys: keys.c
	${CC} -o $@ $< ${LIBS}
#-----------------------------------------------------------------------------
printw: printw.c
	${CC} -o $@ $< ${LIBS}
#-----------------------------------------------------------------------------
