#!/bin/bash -ex
#-----------------------------------------------------------------------------
declare -a GOOD
declare -a ERR
# First create files to compare against.
let c=0 || true
#-----------------------------------------------------------------------------
let GOOD[c]=1 || true
echo 'good['$c']='${GOOD[$c]}
let ERR[c]=2 || true
echo 'err['$c']='${ERR[$c]}
let c=c+1 || true
#-----------------------------------------------------------------------------
let GOOD[c]=3 || true
echo 'good['$c']='${GOOD[$c]}
let ERR[c]=4 || true
echo 'err['$c']='${ERR[$c]}
let c=c+1 || true
#-----------------------------------------------------------------------------
echo '============================================================================='
echo 'good[0]='${GOOD[0]}
echo 'err[0]='${ERR[0]}
echo 'good[1]='${GOOD[1]}
echo 'err[1]='${ERR[1]}
echo '============================================================================='
let c=0 || true
echo 'good[0]='${GOOD[$c]}
echo 'err[0]='${ERR[$c]}
let c=1 || true
echo 'good[1]='${GOOD[$c]}
echo 'err[1]='${ERR[$c]}
#-----------------------------------------------------------------------------
echo '============================================================================='
let c=0 || true
echo 'good[0]='${GOOD[$c]}
echo 'err[0]='${ERR[$c]}
let c=1 || true
echo 'good[1]='${GOOD[$c]}
echo 'err[1]='${ERR[$c]}
#-----------------------------------------------------------------------------
declare -a NAMESERVERS
NAMESERVERS=(75.75.76.76 75.75.75.75)
#-----------------------------------------------------------------------------
let c=0 || true
for n in "${NAMESERVERS[@]}"
do
    echo 'good['$c']='${GOOD[$c]}
    echo 'err['$c']='${ERR[$c]}
    let c=c+1 || true
done
#-----------------------------------------------------------------------------
exit 0
==============================================================================

