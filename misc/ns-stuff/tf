#!/bin/bash -ex

echo 'true && echo and || echo or'
true && echo and || echo or
# and
#.............................................................................
echo 'false && echo and || echo or'
false && echo and || echo or
# or
#.............................................................................
echo 'true || echo or && echo and'
true || echo or && echo and
# and
#.............................................................................
echo 'false || echo or && echo and'
false || echo or && echo and
# or and

#.............................................................................
exit 0
