#!/bin/bash -e
source ENV
#-----------------------------------------------------------------------------
# Get date and time usable for file name.
T=`/bin/date '+%Y-%m-%d_%H-%M-%S'`
#-----------------------------------------------------------------------------
# Get jobs available.
J=`./m4.py --brief job list`
#-----------------------------------------------------------------------------
mkdir -p migreports.${T}
#-----------------------------------------------------------------------------
for j in ${J}
do
    echo "get migration report for job ${j} into file migreports.${T}/${j}"
    /px/bin/migReport.py --csv --migration ${j} > migreports.${T}/${j} 2>&1
done
#-----------------------------------------------------------------------------
echo "Done with $0 $*"
exit 0
#-----------------------------------------------------------------------------
