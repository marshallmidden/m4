#!/bin/bash -ex
#-----------------------------------------------------------------------------
echo "Starting $0"
#-----------------------------------------------------------------------------
. 00-package-definitions
. 00.COMPILE-WITH-NEW-GCC
#-----------------------------------------------------------------------------
cd ${RPM_VERSION}/
#-----------------------------------------------------------------------------
${MAKE} clean || true
${MAKE} distclean || true
#-----------------------------------------------------------------------------
# 2021-10-14_13-55-47
./configure --prefix=${BINARIES} --enable-sqlite=no \
            CFLAGS='-gdwarf-4 -fPIE -fPIC -DAUDIT_SOFTWARE_UPDATE=1138' \
	    LUA_LIBS=${BINARIES}/lib/liblua.a \
	    LIBS=-lm \
	    1>&2
#-----------------------------------------------------------------------------
${MAKE} ${J}
#-----------------------------------------------------------------------------
${MAKE} install
#-----------------------------------------------------------------------------
#-- ${MAKE} clean || true
#-- ${MAKE} distclean || true
#-----------------------------------------------------------------------------
ldconfig                        # Put it back to original.
#-----------------------------------------------------------------------------
echo "Finishing $0"
exit 0
#-----------------------------------------------------------------------------
