#!/bin/bash -ex
#-----------------------------------------------------------------------------
echo "Starting $0"
#-----------------------------------------------------------------------------
. 00-package-definitions
. 00.COMPILE-WITH-NEW-GCC
#-----------------------------------------------------------------------------
gcc --version
${CC} --version
#-----------------------------------------------------------------------------
cd clone/${DEBUGEDIT_DIR}
#-----------------------------------------------------------------------------
git checkout ${DEBUGEDIT_COMMIT}
#-----------------------------------------------------------------------------
# autoreconf -i -f && ./configure && make && make check
autoreconf -i -f
#-----------------------------------------------------------------------------
./configure --prefix=${BINARIES} CFLAGS=-gdwarf-4 1>&2
#-----------------------------------------------------------------------------
${MAKE} ${J}
#-----------------------------------------------------------------------------
${MAKE} check
#-----------------------------------------------------------------------------
${MAKE} install
#-----------------------------------------------------------------------------
#-- ${MAKE} clean || true
#-- ${MAKE} distclean || true
#-----------------------------------------------------------------------------
ldconfig                        # Put it back to original.
#-----------------------------------------------------------------------------
#-----------------------------------------------------------------------------
echo "Finishing $0"
exit 0
#-----------------------------------------------------------------------------
