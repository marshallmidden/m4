#!/bin/bash -ex
#-----------------------------------------------------------------------------
echo "Starting $0"
#-----------------------------------------------------------------------------
. 00-package-definitions
#-----------------------------------------------------------------------------
cd clone/${READLINE_DIR}
#-----------------------------------------------------------------------------
#-- git checkout ${READLINE_COMMIT} # SOURCE is in-line due to DNS resolution problems.
#-----------------------------------------------------------------------------
#-- autoreconf -i -f
#-----------------------------------------------------------------------------
./configure --prefix=${BINARIES} 1>&2
#-----------------------------------------------------------------------------
make ${J}
#-----------------------------------------------------------------------------
make check
#-----------------------------------------------------------------------------
make install
#-----------------------------------------------------------------------------
make clean || true
make distclean || true
#-----------------------------------------------------------------------------
ldconfig                        # Put it back to original.
#-----------------------------------------------------------------------------
echo "Finishing $0"
exit 0
#-----------------------------------------------------------------------------
