#!/bin/bash -ex
#-----------------------------------------------------------------------------
echo "Starting $0"
#-----------------------------------------------------------------------------
. 00-package-definitions
. 00.COMPILE-WITH-NEW-GCC
#-----------------------------------------------------------------------------
cd ${LUA_VERSION}
#-----------------------------------------------------------------------------
${MAKE} clean
#-----------------------------------------------------------------------------
${MAKE} ${J} INSTALL_TOP=${BINARIES} CFLAGS='-gdwarf-4 -fPIE -fPIC -O3 -Wall -Wextra -DLUA_COMPAT_5_3 -DLUA_USE_LINUX' all
#-----------------------------------------------------------------------------
${MAKE} INSTALL_TOP=${BINARIES} install
#-----------------------------------------------------------------------------
#-- ${MAKE} clean || true
#-- ${MAKE} distclean || true
#-----------------------------------------------------------------------------
ldconfig                        # Put it back to original.
#-----------------------------------------------------------------------------
#-----------------------------------------------------------------------------
echo "Finishing $0"
exit 0
#-----------------------------------------------------------------------------
