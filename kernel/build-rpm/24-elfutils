#!/bin/bash -ex
#-----------------------------------------------------------------------------
echo "Starting $0"
#-----------------------------------------------------------------------------
. 00-package-definitions
. 00.COMPILE-WITH-NEW-GCC
#-----------------------------------------------------------------------------
cd ${ELFUTILS_VERSION}
#-----------------------------------------------------------------------------
CFLAGS+='-fPIE -fPIC -gdwarf-4'
export CFLAGS
CXXFLAGS+='-fPIE -fPIC -gdwarf-4'
export CXXFLAGS
#-----------------------------------------------------------------------------
echo "PKG_CONFIG_PATH=${PKG_CONFIG_PATH}"
#-----------------------------------------------------------------------------
./configure --program-prefix="eu-" --prefix=/usr
#-----------------------------------------------------------------------------
${MAKE} ${J}
#-----------------------------------------------------------------------------
# ${MAKE} check
#-----------------------------------------------------------------------------
${MAKE} install
#-----------------------------------------------------------------------------
#-- ${MAKE} clean || true
#-- ${MAKE} distclean || true
#-----------------------------------------------------------------------------
ldconfig                        # Put it back to original.
#-----------------------------------------------------------------------------
#-----------------------------------------------------------------------------
echo "Finishing $0"
exit 0
#-----------------------------------------------------------------------------
