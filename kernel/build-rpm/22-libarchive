#!/bin/bash -ex
#-----------------------------------------------------------------------------
echo "Starting $0"
#-----------------------------------------------------------------------------
. 00-package-definitions
. 00.COMPILE-WITH-NEW-GCC
#-----------------------------------------------------------------------------
cd ${LIBARCHIVE_VERSION}
#-----------------------------------------------------------------------------
./configure --prefix=${BINARIES} CFLAGS=-gdwarf-4 1>&2
#-----------------------------------------------------------------------------
${MAKE} ${J}
#-----------------------------------------------------------------------------
${MAKE} install
#-----------------------------------------------------------------------------
#-- ${MAKE} clean || true
#-- ${MAKE} distclean || true
#-----------------------------------------------------------------------------
#-----------------------------------------------------------------------------
echo "Finishing $0"
exit 0
#-----------------------------------------------------------------------------
