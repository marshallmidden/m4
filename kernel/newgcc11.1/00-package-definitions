#-----------------------------------------------------------------------------
# First, where the executables are to be placed.
BINARIES="/home/m4/new-gcc-11.1"
mkdir -p ${BINARIES}
J="-j 200"
#-----------------------------------------------------------------------------
# Package locations on the net, and the version of the packages.
# GNU has short name for package before VERSION.tar.xz (gcc,gmp,...).
WHERE_GNU="https://ftp.gnu.org/gnu"
VERSION_GCC="gcc-11.1.0"
VERSION_GMP="gmp-6.2.1"
VERSION_MPFR="mpfr-4.1.0"
VERSION_MPC="mpc-1.2.1"
VERSION_BINUTILS="binutils-2.36.1"

WHERE_FILE="ftp://ftp.astron.com/pub/file"
VERSION_FILE="file-5.40"

WHERE_LIBARCHIVE="https://www.libarchive.org/downloads"
VERSION_LIBARCHIVE="libarchive-3.5.1"

WHERE_LUA="https://www.lua.org/ftp"
VERSION_LUA="lua-5.4.3"

# HTTPS certificate problem - 2021-04-28
WHERE_RPM="http://ftp.rpm.org/releases/rpm-4.16.x"
VERSION_RPM="rpm-4.16.1.3"

WHERE_DB="https://download.oracle.com/berkeley-db"
VERSION_DB="db-4.5.20"

# readline
MANY_PACKAGES="https://git.savannah.gnu.org/git"
#-----------------------------------------------------------------------------
prepath () {
    case ":$PATH:" in
      *":$1:"*) :;;         # in the middle
      "$1:"*) :;;           # at the end
      *":$1") :;;           # at the beginning
      "$1") :;;             # if only one
      *) PATH=$1:$PATH;;
    esac
}
prepath ${BINARIES}
prepath ${BINARIES}/bin
ldconfig ${BINARIES}/lib64/ ${BINARIES}/lib
#-----------------------------------------------------------------------------
