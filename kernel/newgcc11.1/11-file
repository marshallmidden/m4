#!/bin/bash -ex
#-----------------------------------------------------------------------------
echo "Starting $0"
#-----------------------------------------------------------------------------
. 00-package-definitions
#-----------------------------------------------------------------------------
if [ ! -d ${VERSION_FILE} ]; then
    if [ ! -f ${VERSION_FILE}.tar.gz ]; then
	wget -N ${WHERE_FILE}/${VERSION_FILE}.tar.gz
    fi
    tar xf ${VERSION_FILE}.tar.gz
fi
#-----------------------------------------------------------------------------
cd ${VERSION_FILE}
#-----------------------------------------------------------------------------
./configure --prefix=${BINARIES} 1>&2
#-----------------------------------------------------------------------------
make ${J}
#-----------------------------------------------------------------------------
make install
#-----------------------------------------------------------------------------
make clean || true
make distclean || true
#-----------------------------------------------------------------------------
ldconfig ${BINARIES}/lib
#-----------------------------------------------------------------------------
echo "Finishing $0"
exit 0
#-----------------------------------------------------------------------------
