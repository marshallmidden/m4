#!/bin/bash -ex
#-----------------------------------------------------------------------------
# This script gives new gmp, mpfr, mpc, and binutils -- so that new gcc can be compiled.
#-----------------------------------------------------------------------------
echo "Starting $0"
#-----------------------------------------------------------------------------
. 00-package-definitions
#-----------------------------------------------------------------------------
( cd ${VERSION_GMP} && ./configure --prefix=${BINARIES} && make ${J} && make install )
( cd ${VERSION_GMP} && make distclean )
#-----------------------------------------------------------------------------
( cd ${VERSION_MPFR} && ./configure --prefix=${BINARIES} --with-gmp=${BINARIES} && make ${J} && make install )
( cd ${VERSION_MPFR} && make distclean )
#-----------------------------------------------------------------------------
( cd ${VERSION_MPC} && ./configure --prefix=${BINARIES} --with-gmp=${BINARIES} --with-mpfr=${BINARIES} && make ${J} && make install )
( cd ${VERSION_MPC} && make distclean )
#-----------------------------------------------------------------------------
( cd ${VERSION_BINUTILS} && ./configure --prefix=${BINARIES} --with-gmp=${BINARIES} --with-mpfr=${BINARIES} --with-mpc=${BINARIES} && make ${J} && make install )
( cd ${VERSION_BINUTILS} && make distclean )
#-----------------------------------------------------------------------------
echo "Finishing $0"
exit 0
#-----------------------------------------------------------------------------
