#!/bin/bash -ex
#-----------------------------------------------------------------------------
echo "Starting $0"
#-----------------------------------------------------------------------------
. 00-package-definitions
#-----------------------------------------------------------------------------
if [ ! -d ${VERSION_LIBARCHIVE} ]; then
    if [ ! -f ${VERSION_LIBARCHIVE}.tar.xz ]; then
	wget -N ${WHERE_LIBARCHIVE}/${VERSION_LIBARCHIVE}.tar.xz
    fi
    tar xf ${VERSION_LIBARCHIVE}.tar.xz
fi
#-----------------------------------------------------------------------------
cd ${VERSION_LIBARCHIVE}
#-----------------------------------------------------------------------------
./configure --prefix=${BINARIES} 1>&2
#-----------------------------------------------------------------------------
make ${J}
#-----------------------------------------------------------------------------
make install
#-----------------------------------------------------------------------------
make clean || true
make distclean || true
#-----------------------------------------------------------------------------
ldconfig ${BINARIES}/lib
#-----------------------------------------------------------------------------
echo "Finishing $0"
exit 0
#-----------------------------------------------------------------------------
