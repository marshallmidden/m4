#!/bin/bash -ex
#-----------------------------------------------------------------------------
echo "Starting $0"
#-----------------------------------------------------------------------------
. 00-package-definitions
#-----------------------------------------------------------------------------
if [ ! -d ${VERSION_LUA} ]; then
    if [ ! -f ${VERSION_LUA}.tar.gz ]; then
	wget -N ${WHERE_LUA}/${VERSION_LUA}.tar.gz
    fi
    tar xf ${VERSION_LUA}.tar.gz
fi
#-----------------------------------------------------------------------------
cd ${VERSION_LUA}
#-----------------------------------------------------------------------------
make clean
#-----------------------------------------------------------------------------
make ${J} INSTALL_TOP=${BINARIES} CFLAGS='-fPIE -fPIC -O3 -Wall -Wextra -DLUA_COMPAT_5_3 -DLUA_USE_LINUX'
#-----------------------------------------------------------------------------
make INSTALL_TOP=${BINARIES} install
#-----------------------------------------------------------------------------
make clean || true
make distclean || true
#-----------------------------------------------------------------------------
ldconfig ${BINARIES}/lib
#-----------------------------------------------------------------------------
echo "Finishing $0"
exit 0
#-----------------------------------------------------------------------------
