#!/bin/bash -ex
#-----------------------------------------------------------------------------
echo entering 11-libmagic
BINARIES="/home/m4/new-a"
#-----------------------------------------------------------------------------
prepath () {
    case ":$PATH:" in
      *":$1:"*) :;;         # in the middle
      "$1:"*) :;;           # at the end
      *":$1") :;;           # at the beginning
      "$1") :;;             # if only one
      *) PATH=$1:$PATH;;
    esac
}
prepath ${BINARIES}/bin
#-----------------------------------------------------------------------------
mkdir -p ${BINARIES}
J="-j 200"
#-----------------------------------------------------------------------------
if [ ! -d file-5.39 ]; then
    if [ ! -f file-5.39.tar.gz ]; then
	wget -N ftp://ftp.astron.com/pub/file/file-5.39.tar.gz
    fi
    tar xf file-5.39.tar.gz
fi
#-----------------------------------------------------------------------------
cd file-5.39
#-----------------------------------------------------------------------------
./configure --prefix=${BINARIES} 1>&2
#-----------------------------------------------------------------------------
make ${J}
#-----------------------------------------------------------------------------
make install
#-----------------------------------------------------------------------------
make clean || true
make distclean || true
#-----------------------------------------------------------------------------
ldconfig /home/m4/new-a/lib
#-----------------------------------------------------------------------------
echo exiting 11-libmagic
exit 0
#-----------------------------------------------------------------------------
