#!/bin/bash -ex
# NOTE: /home/m4/new-a is --prefix for following installs.
#-----------------------------------------------------------------------------
./01.GET.sources
#-----------------------------------------------------------------------------
# Compile the various prereqs for gcc and put them into /home/m4/new-a/*.
./02.NEW-prereq-4-gcc
#-----------------------------------------------------------------------------
./05.COMPILE.gcc
./06.INSTALL.gcc
#-----------------------------------------------------------------------------
prepath () {
    case ":$PATH:" in
      *":$1:"*) :;;         # in the middle
      "$1:"*) :;;           # at the end
      *":$1") :;;           # at the beginning
      "$1") :;;             # if only one
      *) PATH=$1:$PATH;;
    esac
}
prepath /home/m4/new-a/bin
#-----------------------------------------------------------------------------
./11-file
./12-libarchive
./13-lua
./14-rpm
#-----------------------------------------------------------------------------
exit 0
#-----------------------------------------------------------------------------
